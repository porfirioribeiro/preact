{
  "name": "composition",
  "amdName": "preactCompositions",
  "version": "0.1.0",
  "private": true,
  "description": "Composition addon for Preact",
  "main": "dist/composition.js",
  "module": "dist/composition.module.js",
  "umd:main": "dist/composition.umd.js",
  "source": "src/index.js",
  "license": "MIT",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "microbundle build --raw",
    "dev": "microbundle watch --raw --format cjs",
    "test": "npm-run-all build --parallel test:karma",
    "test:karma": "karma start test/karma.conf.js --single-run",
    "test:karma:watch": "karma start test/karma.conf.js --no-single-run"
  },
  "peerDependencies": {
    "preact": "^10.0.0"
  },
  "mangle": {
    "regex": "^_"
  }
}
